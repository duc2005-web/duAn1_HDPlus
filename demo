<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
</head>
<body>
    <h1>Danh sách sản phẩm</h1>
    <table border="1">
        <thead>
            <tr>
                <th>STT</th>
                <th>Tên sách</th>
                <th>Nhà xuất bản</th>
                <th>Năm xuất bản</th>
                <th>Giá</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>

        </tbody>
    </table>
    <script>
        // Call API lấy ds sản phẩm
        const getBooks = async ()=>{
            // truy cập tbody 
            const tbody = document.querySelector('tbody')
            try {
                const response = await fetch(`http://localhost:3000/books`)
                if (response.ok){
                    const books = await response.json()
                    // console.log(books);
                    // duyệt mảng books
                    books.forEach((book,index)=>{
                        // tạo thẻ tr
                        const tr = document.createElement('tr')
                        tr.innerHTML = `
                            <td>${index+1}</td>
                            <td>${book.name}</td>
                            <td>${book.publish}</td>
                            <td>${book.year}</td>
                            <td>${book.price}</td>
                            <td>
                                <a href="editbook.html?id=${book.id}">Sửa</a>
                                <button onclick="DelBook('${book.id}')">Xóa</button>
                            </td>
                        `
                        // insert tr vào tbody 
                        tbody.append(tr)
                    })
                }
            } catch (error) {
                
            }
        }
        getBooks()
        // Định nghĩa hàm xóa
        const DelBook = async (id)=>{
            if (confirm('Bạn chắc chứ?')){
                try {
                    const response = await fetch(`http://localhost:3000/books/${id}`,{method:'DELETE'})
                    if (response.ok) alert('Xóa thành công')
                    else alert('Xóa thất bại')
                } catch (error) {
                    alert('Xóa thất bại')
                }
            }
        }
    </script>
</body>
</html>
